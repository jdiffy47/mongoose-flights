<%- include("../partials/html-head") %>
  <%- include("../partials/nav") %>

<main>
  <h1><%= title %></h1>
    <table>
      <thread>
        <tr>
          <th>Airline</th>
          <th>Airport</th>
          <th>Flight No</th>
          <th>Departs</th>
          <th>Details</th>
          <th>Delete</th>
        </tr>
      </thread>
        <tbody>
          <% flights.forEach(flight=> { %>
            <tr>
              <td><%= flight.airline %></td>
              <td><%= flight.airport %></td>
              <td><%= flight.flightNo %></td>
              <td><%= flight.departs %></td>
              <td><a href="/flights/<%= flight._id %>">DETAILS</a></td>
              <td><form action="flights/<%= flight._id %>?_method=DELETE" method="POST">
              <button>X</button>
              </form></td>
            </tr>
            
            <% }) %>
        </tbody>
      </table>
    </main>

    <%- include("../partials/footer") %>