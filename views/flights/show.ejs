<%- include('../partials/html-head') %>
  <%- include('../partials/nav') %>

    <main>
      <h1><%= title %></h1>
      <section>
        <div>
          <%= flight.airline %>
          <a href="/flights/<%= flight._id %>/edit">
            <button>Edit Flight</button>
          </a>
        </div>
        <div>Airport: </div>
        <div><%= flight.airline %></div>
        <div>Airline: </div>
        <div><%= flight.airport %></div>
        <div>FlightNo: </div>
        <div><%= flight.flightNo %></div>
        <div>Departs: </div>
        <div><%= flight.departs.toLocaleString()%></div>
      </section>
      <form action="/flights/<%= meal._id %>/meals" method="POST">
        <select name="mealId">
          <% meals.forEach(meal => { %> 
            <option value="<%= meal._id %>"><%= meal.name %></option> <% }) %> 
        </select>
        <button type="submit">Add Meal</button>
      </form>


      <h2>Tickets</h2>
      <form id="add-ticket-form" action="/flights/<%= flight._id %>/tickets" method="POST">
        <label for="content-textarea">Ticket:</label>
        <input name="seat" required pattern="[A-F][1-9]\d?">
        <label for="ticket-select">Price:</label>
        <input type="number" name="price">
        <button type="submit">Add Ticket</button>
      </form>
      <% if (flight.tickets.length) { %>
      <table>
        <thead>
          <tr>
            <th>Seat</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>
        <% let total=0 %>
        <% flight.tickets.forEach(function(ticket) { %>
        <% total +=ticket.price %>
          <tr>
            <td><%= ticket.seat %></td>
            <td><%= ticket.price %></td>
          </tr>
                <% }) %>
          <tr>
            <td colspan="2"></td>
            <td><strong><%= (total / flight.tickets.length).toFixed(1) %></strong>
            </td>
          </tr>
        </tbody>
      </table>
          <% } else { %>
            <h3>No Tickets Yet</h3>
            <% } %>
    </main>

    <%- include('../partials/footer') %>