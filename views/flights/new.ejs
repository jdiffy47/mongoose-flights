<%- include("../partials/html-head") %>
<link rel="stylesheet" href="/stylesheets/movies/new.css">
<%- include("../partials/nav") %>  

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights" method="POST">
    <label for="airline-input">Airline:</label>
    <input type="text" name="airline" id="airline-input" required>
    <label for="airport-input">Airport:</label>
    <input type="text" name="airport" id="airport-input">
    <label for="flightNo-input">FlightNo:</label>
    <input type="text" name="FlightNo" id="flightNo-input">
    <label for="departs-input">Departs (Date & Time):</label>
    <input type="text" name="departs" id="departs-input">
    <button type="submit">Add Flight</button>
  </form>
</main>

