<%- include("../partials/html-head") %>
<%- include("../partials/nav") %>  

<main>
  <h1><%= title %></h1>
    <form id="new-form" action="/flights" method="POST">

      <label for="airline-input">Airline:</label>
      <select name="airline" id="airline-input">
        <option value="American">American</option>
        <option value="Southwest">Southwest</option>
        <option value="United">United</option>
      </select>

      <label for="airport-input">Airport:</label>
      <select name="airpot" id="airport-input">
        <option value="AUS">AUS</option>
        <option value="DFW">DFW</option>
        <option value="DEN">DEN</option>
        <option value="LAX">LAX</option>
        <option value="SAN">SAN</option>
      </select>
      <label for="flightNo-input">FlightNo:</label>
      <input type="text" name="FlightNo" id="flightNo-input">
      <label for="departs-input">Departs (Date & Time):</label>
      <input type="text" name="departs" id="departs-input">
      <button type="submit">Add Flight</button>
  </form>
</main>

